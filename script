local ColorEdit = PhantomParam:new("PhantomParamTransEdit", 1)
      ColorEdit:Red(0)
      ColorEdit:Red2(0)
      ColorEdit:Red3(0)
      ColorEdit:Red4(0)
      ColorEdit:Green(0)
      ColorEdit:Green2(0)
      ColorEdit:Green3(0)
      ColorEdit:Green4(0)
